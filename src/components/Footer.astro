---
import { Image } from "astro:assets";
import Facebook from "../assets/images/Facebook.png";
import instagram from "../assets/images/instagram.png";
import YouTube from "../assets/images/YouTube.png";
import LinkedIn from "../assets/images/LinkedIn.png";
---


<footer class="bg-[#fce8cf] py-8">
    <div class="container mx-auto flex flex-wrap justify-between items-start">
      <!-- Højskolendk Section -->
      <div class="w-full md:w-1/3 mb-6 md:mb-0">
        <h1 class="text-[25px] px10 knewave">HÖJSKOLENDK</h1>
        <p>Rosenørns Allé 29</p>
        <p>1970 Frederiksberg</p>
        <p>Danmark</p>
      </div>
  
       <!-- Kontakt Section -->
       <div class="w-full md:w-1/3 mb-6 md:mb-0">
        <h1 class="text-[25px] px10 knewave">KONTAKT</h1>
        <p>Telefon: +45 70 27 90 07</p>
        <p>Mandag til Fredag 10:00 - 16:00</p>
        <p>Mail: <a href="mailto:info@hojskolendk.dk" class="text-blue-500">info@hojskolendk.dk</a></p>
        <div class="flex space-x-4 mt-4">
          <!-- Social Media Icons (using PNG images) -->
          <a href="https://facebook.com" target="_blank">
            <Image
            src={Facebook} alt="Facebook" class="w-8 h-8"/>
          </a>
          <a href="https://instagram.com" target="_blank">
            <Image
            src={instagram}  alt="Instagram" class="w-8 h-8"/>
          </a>
          <a href="https://youtube.com" target="_blank">
            <Image
            src={YouTube}  alt="YouTube" class="w-8 h-8"/>
          </a>
          <a href="https://linkedin.com" target="_blank">
            <Image
            src={LinkedIn} alt="LinkedIn" class="w-8 h-8"/>
          </a>
        </div>
      </div>
  
  
      <!-- Samarbejdspartnere Section -->
      <div class="w-full md:w-1/3">
        <h1 class="text-[25px] px10 knewave">Samarbejdspartnere</h1>
        <div class="grid grid-cols-2 gap-4">
          <img src="/src/assets/images/jysk.png" alt="Rejsegaranti Fonden" class="max-h-12">
          <img src="/src/assets/images/rejse.png" alt="Jysk Rejsebureau" class="max-h-12">
          <img src="/src/assets/images/gouda.png" alt="Gouda" class="max-h-12">
          <img src="/src/assets/images/co2.png" alt="CO2 Neutral" class="max-h-12">
        </div>
      </div>
    </div>
  
    <div class="border-t border-gray-300 mt-6 pt-4 text-center">
      <p class="text-sm">Copyright © HØJSKOLENDK 2022 • CVR 32491162</p>
    </div>
  </footer>
  